<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/billboardFragment">

    <fragment
        android:id="@+id/billboardFragment"
        android:name="com.example.laboratorio5.BillboardFragment"
        android:label="fragment_billboard"
        tools:layout="@layout/fragment_billboard" >
        <action
            android:id="@+id/action_billboardFragment_to_newMovie"
            app:destination="@id/newMovie"
            app:enterAnim="@android:anim/slide_in_left" />
        <action
            android:id="@+id/action_billboardFragment_to_movieFragment"
            app:destination="@id/movieFragment"
            app:enterAnim="@android:anim/fade_in" />
        <action
            android:id="@+id/action_billboardFragment_to_movieHarryPotter"
            app:destination="@id/movieHarryPotter"
            app:enterAnim="@android:anim/fade_in" />
    </fragment>
    <fragment
        android:id="@+id/newMovie"
        android:name="com.example.laboratorio5.NewMovieFragment"
        android:label="fragment_new_movie"
        tools:layout="@layout/fragment_new_movie" />
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.example.laboratorio5.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" />
    <fragment
        android:id="@+id/movieHarryPotter"
        android:name="com.example.laboratorio5.MovieHarryPotterFragment"
        android:label="MovieHarryPotter" />
</navigation>